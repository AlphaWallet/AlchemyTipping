    function formURI(string memory baseURI, uint256 tokenId) internal pure returns (string memory concat)
    {
        string memory tokenIdStr = uint2str(tokenId);
        uint256 uriLength;
        uint256 len;
        assembly
        {   //record base string length and final string length
            uriLength := mload(baseURI)
            len := add(uriLength, mload(tokenIdStr))
        }
        
        concat = new string(len + 0x20);
        uint cycles = (len / 32) + 1;
        
        assembly {
            
            let mc := add(concat, 0x20) //offset into bytes we're writing into
            let cycle := 0

            for
            {
                let cc := add(baseURI, 0x20)
            } lt(cycle, cycles) {
                mc := add(mc, 0x20)
                cc := add(cc, 0x20)
                cycle := add(cycle, 0x01)
            } {
                mstore(mc, mload(cc))
            }
            
            //write tokenIdStr to end 
            mc := add(concat, add(0x20, uriLength))
            mstore(mc, mload(add(tokenIdStr, 0x20)))
            //now reset length
            mstore(concat, len)
        }
    }
    
    function uint2str(uint _i) internal pure returns (string memory _uintAsString) {
        if (_i == 0) {
            return "0";
        }
        uint j = _i;
        uint len;
        while (j != 0) {
            len++;
            j /= 10;
        }
        bytes memory bstr = new bytes(len);
        uint k = len;
        while (_i != 0) {
            k = k-1;
            uint8 temp = (48 + uint8(_i - _i / 10 * 10));
            bytes1 b1 = bytes1(temp);
            bstr[k] = b1;
            _i /= 10;
        }
        return string(bstr);
    }
    
